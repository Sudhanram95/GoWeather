<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Button" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextStyle" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_colour</item>
        <item name="android:padding">5dp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="BigText" parent="TextStyle">
        <item name="android:textSize">96sp</item>
        <item name="android:padding">0dp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="MediumText" parent="TextStyle">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/light_text_colour</item>
        <item name="android:fontFamily">@font/roboto_thin</item>
    </style>

    <style name="SmallText" parent="TextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_colour</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="ErrorText" parent="TextStyle">
        <item name="android:textSize">54sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_thin</item>
    </style>

</resources>
